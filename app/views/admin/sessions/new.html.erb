<%= form_with model: @admin, url: admin_session_path do |f| %>
  <%= render "admin/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="col-sm-12 mx-auto">
      <h3>管理者ログイン</h3>

      <div class="admin-form">
        <div class="row">
          <label class="col-3">e-mail</label>
          <div class="col-6">
            <%= f.email_field :email, autofocus: true, placeholder:"sample@gmail.com" %>
          </div>
        </div>
      </div>

      <div class="admin-form">
        <div class="row">
          <label class="col-3">パスワード</label>
          <div class="col-3">
            <%= f.password_field :password, placeholder:"６文字以上２０文字以内" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <div class="row">
          <label class="col-3"></label>
          <div class="col-3">
            <%= f.submit "ログイン" ,class:'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>




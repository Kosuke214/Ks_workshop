<div class="container">
  <div class="col-sm-12 mx-auto">
    <h3><%= image_tag 'comment.png', width: '5%', height: '5%' %>コメント詳細</h3>

<%#　部分テンプレートにする　#%>
    <div class = "col-8 mx-auto">

      <div class = "row justify-content-end">
        <%= @comment.created_at.strftime('%Y/%m/%d') %>
      </div>

      <div class = "row">
        <div class = "col-2">
          <%#= posts.get_image %>
        </div>
        <div class = "col-10">
          <div class = "row">
            <% if @comment.user.status == false %>
              <p class="text-danger">退会済みです</p>
            <% else %>
              <%= link_to user_path(@comment.user_id) do %>
                <%= @comment.user.nickname %>
              <% end %>さん
            <% end %>
          </div>
          <div class = "row">
            DIY歴　<%= @comment.user.diy_history_i18n %>
          </div>
        </div>
      </div>

      <div class = "row">
        <%= @comment.comment_text %>
      </div>

      <div class = "row justify-content-end">
        <%= link_to "<<投稿詳細に戻る",post_path(@comment.post_id), class:"text-secondary" %>
      </div>

<%#　部分テンプレートにする　#%>
  </div>
  <div class = "col-8 mx-auto">
    <div class = "row justify-content-end">
      <% if @comment.user_id == current_user.id %>
        <%= link_to "編集", edit_comment_path, class: 'btn btn-success mr-0' %>
      <% end %>
    </div>
  </div>
</div>

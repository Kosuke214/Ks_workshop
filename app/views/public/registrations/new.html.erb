<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container mt-3">
    <div class="col-sm-12 form-label mx-auto">
      <h3 class = "title"><span>新規登録フォーム</span></h3>

      <%= render :partial => "form", :locals => {:f => f, user: @user} %>

      <div class="actions">
        <div class="row">
          <label class="col-3"></label>
          <div class="row">
            <%= f.submit "新規登録" ,class:'btn btn-success mr-5' %>
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post,class:'btn btn-secondary' %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>



<%= form_with model: @user, url: user_session_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container mt-3">
    <div class="col-sm-12 mx-auto">
      <h3 class = "title"><span>ログインフォーム</span></h3>

      <div class="user-form">
        <div class="row">
          <label class="col-3">e-mail</label>
          <div class="col-3">
            <%= f.email_field :email, autofocus: true, placeholder:"sample@gmail.com", class: "w-100" %>
          </div>
        </div>
      </div>

      <div class="user-form">
        <div class="row">
          <label class="col-3">パスワード</label>
          <div class="col-3">
            <%= f.password_field :password, placeholder:"６文字以上２０文字以内", class: "w-100" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <div class="row">
          <label class="col-3"></label>
          <div class="row">
            <%= f.submit "ログイン" ,class:'btn btn-success mr-5' %>
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class:'btn btn-secondary' %>
          </div>
        </div>
      </div>

    </div>
  </div>

<% end %>


